<Page
    x:Class="Project_D.Views.ProgressPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project_D.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d"
    xmlns:viewModels="using:Project_D.ViewModels"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel VerticalAlignment="Center">
        <StackPanel>
            <controls:RadialProgressBar
                x:Name="CircularProgress"
                Grid.Column="1"
                Value="{x:Bind _progress.Value ,Mode=OneWay}"
                Foreground="Green"
                Thickness="4"
                Minimum="{x:Bind _progress.Minimum}"
                Maximum="{x:Bind _progress.Maximum}"
                Width="100"
                Height="100"
                Outline="LightSkyBlue" 
                ValueChanged="CircularProgress_ValueChanged"/>
            <TextBlock Name="TextProgress" Text="{x:Bind _progress.ToString(),Mode=OneWay}"></TextBlock>
            <Button Command="{x:Bind _progress.SuspendComman}"></Button>
        </StackPanel>
    </StackPanel>
</Page>
